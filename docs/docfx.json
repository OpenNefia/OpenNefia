{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.csproj"],
          "exclude": [ "**/bin/**", "**/obj/**" ], 
          "cwd": ".."
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.yml"],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "index.md", "toc.yml" ],
      },
      {
        "files": [ "conceptual/**" ],
      }
    ],
    "globalMetadata" : {
      "_appTitle": "OpenNefia Docs",
      "_enableSearch": true
    },
    "dest": "site",
    "template": ["statictoc", "templates/docfx-lavandula/src"]
  }
}
